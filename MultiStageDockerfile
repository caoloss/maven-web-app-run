#git
FROM alpine/git as repo

MAINTAINER caoloss@gmail.com
#RUN mkdir /var/lib/jenkins/workspace/PipelineDockerBuildMultiStage
WORKDIR /var/lib/jenkins/workspace/PipelineDockerBuildMultiStage
RUN git clone https://github.com/caoloss/maven-web-app.git

#Maven
FROM maven:3.5-jdk-8-alpine as build
WORKDIR /var/lib/jenkins/workspace/PipelineDockerBuildMultiStage
COPY --from=repo /var/lib/jenkins/workspace/PipelineDockerBuildMultiStage/maven-web-app  /var/lib/jenkins/workspace/PipelineDockerBuildMultiStage
RUN mvn install

#Tomcat
FROM tomcat:8.0.20-jre8
#COPY  target/*war /usr/local/tomcat/webapps/maven-web-app.war
COPY --from=build /var/lib/jenkins/workspace/PipelineDockerBuildMultiStage/target/*war /usr/local/tomcat/webapps/
